<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".ComposeActivity">

    <ImageButton
        android:id="@+id/micid"
        android:layout_width="309dp"
        android:layout_height="362dp"
        android:background="@color/colorAccent"
        android:backgroundTint="@color/colorAccent"
        android:scaleType="fitCenter"
        android:tint="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.382"
        app:srcCompat="@drawable/ic_mic"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/text2id"
        android:layout_width="291dp"
        android:layout_height="56dp"
        android:text="You Are In Compose"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/micid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.866" />

    <TextView
        android:id="@+id/subjectid"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginTop="48dp"
        android:hint="Subject"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.195"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/micid"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/recipientid"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:hint="Recipient"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.195"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subjectid"
        app:layout_constraintVertical_bias="0.141" />

    <TextView
        android:id="@+id/emailid"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:hint="Compose Email"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.195"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recipientid"
        app:layout_constraintVertical_bias="0.246" />

    <EditText
        android:id="@+id/choiceid"
        android:layout_width="148dp"
        android:layout_height="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="95dp"
        android:ems="10"
        android:hint="Choice"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.272"
        app:layout_constraintStart_toEndOf="@+id/recipientid"
        app:layout_constraintTop_toBottomOf="@+id/micid"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>